<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlizaCybertruck" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/neu_theme_day_background</item>
        <item name="colorPrimaryVariant">@color/neu_theme_day_background</item>
        <item name="colorOnPrimary">@color/text_black</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/text_gray</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/gilroy</item>
        <!--  neumorphism color.  -->
        <item name="neumorph_backgroundColor">?attr/colorPrimary</item>
        <item name="neumorph_shadowColorDark">@color/neu_theme_day_shadow_dark</item>
        <item name="neumorph_shadowColorLight">@color/neu_theme_day_shadow_light</item>


    </style>

    <style name="Theme.AlizaCybertruck" parent="Base.Theme.AlizaCybertruck" />
</resources>